const grid = document.getElementById('product-grid');
const cartCount = document.getElementById('cart-count');
const cartTotal = document.getElementById('cart-total');
let cart = {};

function formatBRL(v){
  return v.toLocaleString('pt-BR', {style:'currency',currency:'BRL'});
}

function renderProducts(){
  grid.innerHTML = '';
  products.forEach(p=>{
    const card = document.createElement('div');card.className='card';
    card.innerHTML = `
      <img src="${p.img}" alt="${p.name}" loading="lazy">
      <div class="title">${p.name}</div>
      <div class="meta">
        <div class="price">${formatBRL(p.price)}</div>
        <div class="small">Unidade</div>
      </div>
      <div style="display:flex;justify-content:space-between;align-items:center">
        <div class="qty">
          <button class="btn secondary" data-action="dec" data-id="${p.id}">-</button>
          <div id="qty-${p.id}" style="min-width:28px;text-align:center">0</div>
          <button class="btn" data-action="inc" data-id="${p.id}">+</button>
        </div>
        <div style="text-align:right">
          <div class="small">Subtotal</div>
          <div id="sub-${p.id}" class="price">${formatBRL(0)}</div>
        </div>
      </div>
    `;
    grid.appendChild(card);
  });
}

function updateCartUI(){
  const items = Object.values(cart);
  const totalCount = items.reduce((s,i)=>s+i.qty,0);
  const totalValue = items.reduce((s,i)=>s + i.qty * i.price,0);
  cartCount.textContent = totalCount;
  cartTotal.textContent = formatBRL(totalValue);
}

function changeQty(id, delta){
  const prod = products.find(p=>p.id===id);
  if(!prod) return;
  if(!cart[id]) cart[id] = {id:prod.id,name:prod.name,price:prod.price,qty:0};
  cart[id].qty = Math.max(0, cart[id].qty + delta);
  document.getElementById(`qty-${id}`).textContent = cart[id].qty;
  document.getElementById(`sub-${id}`).textContent = formatBRL(cart[id].qty * prod.price);
  // remove if zero
  if(cart[id].qty===0) delete cart[id];
  updateCartUI();
}

// events
window.addEventListener('click', e=>{
  const btn = e.target.closest('button');
  if(!btn) return;
  const action = btn.dataset.action;
  const id = parseInt(btn.dataset.id);
  if(action === 'inc') changeQty(id, +1);
  if(action === 'dec') changeQty(id, -1);
});

// inicializa
renderProducts();
updateCartUI();
</script></body>
